{
  "root": true,
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 2021
  },
  "rules": {
    "no-console": "off",
		"no-debugger": "off",
		"indent": ["error", "tab"],
		"comma-dangle": ["error", "always-multiline"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"space-in-parens": ["error", "never"],
		"arrow-parens": ["error", "always"],
		"no-var": ["error"]
  }
}
